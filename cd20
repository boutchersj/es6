function makeClass() {
  "use strict";
  /* Alter code below this line */
class Vegetable {
  constructor(name) {
    this.name = name;
  }
}
  /* Alter code above this line */
  return Vegetable;
}
const Vegetable = makeClass();
const carrot = new Vegetable('carrot');
console.log(carrot.name); // => should be 'carrot'

//ES6 syntax uses the 'class' syntax (JUST syntax, not an actual OOP class) to replace the constructor function declaration
//The constructor inside the class is what actual makes the object, and is triggered by the 'new' keyword
//Class syntax just organizes constructor functions for greater readability and helps readers know it's a constructor function
