const sum = (function() {
  "use strict";
  return function sum(...args) {
    return args.reduce((a, b) => a + b, 0);
  };
})();
console.log(sum(1, 2, 3)); // 6

//'...args' is called the 'rest operator'
//It lets you have a variable number of parameters in an array that you can modify with map(), filter(), and reduce()
//You don't have to check the args array anymore
